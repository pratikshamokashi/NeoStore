<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/main_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/txt_neostore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_34dp"
            android:layout_marginRight="@dimen/margin_right_34dp"
            android:gravity="center"
            android:text="@string/neostore"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/et_username"
            style="@style/style_EditText"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/username_icon"
            android:text="@string/username"
            android:textSize="30sp"
        />

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <EditText
            android:id="@+id/et_password"
            style="@style/style_EditText"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/password_icon"
            android:text="@string/password"
            android:textSize="30sp"
        />

        <Space
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/btn_login"
            style="@style/style_button"
            android:background="@drawable/rounded_btn"
            android:text="@string/login"
            android:textColor="@color/red"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/txt_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_34dp"
            android:layout_marginRight="@dimen/margin_right_34dp"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_new_accnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginBottom="@dimen/margin_bottom_10dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="@string/dont_have_an_account"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/img_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:layout_marginLeft="@dimen/margin_left_60dp"
                android:layout_marginBottom="@dimen/margin_bottom_30dp"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>